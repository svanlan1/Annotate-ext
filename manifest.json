{
  "name": "Marker",
  "version": "0.3",
  "manifest_version": 2,
  "author": "Shea VanLaningham",
  "options_page": "index.html",
  "description": "An extension for marking up pages with accessibility recommendations",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/jscolor.js", "js/test_anchors.js", "js/test_html.js", "js/test_images.js", "js/marker2.js", "js/jquery.js", "js/jquery-ui.js"],
      "css": ["css/marker.css", "css/jquery-ui.min.css", "css/jquery-ui.structure.min.css", "css/jquery-ui.theme.min.css", "css/print.css"],
      "run_at" : "document_start"
    }
  ],
  "icons":{"16":"images/marker_16_inactive.png", "128":"images/marker_128.png"},
  "browser_action": {
    "default_icon": "images/marker_16_inactive.png"
  },
  "permissions": [
    "tabs", "<all_urls>", "http://*/*", "https://*/*"
  ],
   "web_accessible_resources": [
    "index.html",
    "marker.html",
    "js/marker2.js",
    "css/marker.css",
    "css/railway.css",
    "js/options.json",
